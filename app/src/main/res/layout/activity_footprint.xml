<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_footprint">

    <TextView
        android:id="@+id/textMyFootprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Footprint"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textFootprintValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 steps"
        android:textStyle="bold"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textMyFootprint"
        app:layout_constraintStart_toStartOf="@id/textMyFootprint" />

    <TextView
        android:id="@+id/textUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="steps"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/textFootprintValue"
        app:layout_constraintBaseline_toBaselineOf="@id/textFootprintValue" />

    <LinearLayout
        android:id="@+id/changeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textFootprintValue"
        app:layout_constraintStart_toStartOf="@id/textFootprintValue">

        <TextView
            android:id="@+id/textChangePercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0% since last month"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0 km"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/changeLayout"
        app:layout_constraintStart_toStartOf="@id/textFootprintValue" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDistance" />

    <ImageView
        android:id="@+id/plantIllustration"
        android:layout_width="411dp"
        android:layout_height="223dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/women"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineChart" />

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#2E2E2E"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantIllustration"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="25dp"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/reward"
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:layout_margin="25dp"
            android:src="@drawable/trophy" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="25dp"
            android:src="@drawable/goal" />

        <ImageView
            android:id="@+id/Chart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="25dp"
            android:src="@drawable/chart" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="25dp"
            android:src="@drawable/logout" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>