<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emaissin_backgrund">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Eco Coins Indicator -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end">

            <LinearLayout
                android:layout_width="136dp"
                android:layout_height="58dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ecocoin"
                    />

                <TextView
                    android:id="@+id/tvEcoCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="350"
                    android:textColor="#4CAF50"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:background="@android:color/white"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/bus2"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public Transport"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/lbreg"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <EditText
                    android:id="@+id/etFromLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="From Location"
                    android:fontFamily="@font/popreg"
                    android:padding="16dp"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etToLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:hint="To Location"
                    android:fontFamily="@font/popreg"
                    android:padding="16dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:layout_gravity="center_horizontal"
            android:text="Calculate Route"
            android:textAllCaps="false"
            android:fontFamily="@font/popreg"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Distance: -- km"
                    android:textColor="#333"
                    android:fontFamily="@font/popreg"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvCO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="CO2 Saved: -- kg"
                    android:fontFamily="@font/popreg"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvEstimatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Time: -- mins"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:fontFamily="@font/popreg"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Book Ticket Button -->
        <Button
            android:id="@+id/btnBookTicket"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#4CAF50"
            android:text="Book Ticket"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="80dp"
            android:background="#2E2E2E"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="25dp"
                android:src="@drawable/home_icon" />

            <ImageView
                android:id="@+id/progress"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="25dp"
                android:src="@drawable/trophy" />

            <ImageView
                android:id="@+id/reward"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="25dp"
                android:src="@drawable/reward" />

            <ImageView
                android:id="@+id/publicTransport"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="25dp"
                android:src="@drawable/transport" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>